{
  "rewrites": [
    { "source": "/pay-done", "destination": "/index.html" },
    { "source": "/payment/cancel", "destination": "/index.html" },
    { 
      "source": "/((?!static|.*\\..*|manifest.json|favicon.ico|logo.*\\.png|robots.txt).*)", 
      "destination": "/index.html" 
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
